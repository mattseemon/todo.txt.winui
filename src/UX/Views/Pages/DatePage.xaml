<Page
    x:Class="Seemon.Todo.Views.Pages.DatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Style="{ThemeResource BodyTextBlockStyle}" VerticalAlignment="Center" x:Uid="DatePage_SetDate_Label" Margin="0 0 12 0" />
        <DatePicker Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" MinWidth="200" SelectedDate="{x:Bind ViewModel.BindableModel.BindableDateTime, Mode=TwoWay}" />
    </Grid>
</Page>
